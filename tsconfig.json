{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "es6",
        "target": "es5",
        "lib": ["es2015", "es6", "esnext", "dom"],
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "components/*": ["./src/components/*"],
            "assets/*": ["./src/assets/*"]
        },
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*"]
}
